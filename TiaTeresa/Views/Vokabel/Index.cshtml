@model IEnumerable<TiaTeresa.Models.Vokabel>

@{
    ViewData["Title"] = "Index";
}

<p>
    @if (User.Identity.IsAuthenticated)
                {
                     <a asp-action="Create" class="btn btn-primary">Vokabel hinzufügen</a>
                }
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Spanisch)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Deutsch)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Spanisch)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Deutsch)
            </td>
            <td>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary ms-1">Bearbeiten</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger ms-1">Löschen</a>
                    }
                </td>
        </tr>

}

    </tbody>
</table>


       @if (ViewBag.TotalPages > 1)
        {
            <nav>
                <ul class="pagination">
                    @for (int i = 1; i <= ViewBag.TotalPages; i++)
                    {
                        <li class="page-item @(ViewBag.CurrentPage == i ? "active" : "")">
                            <a class="page-link" asp-action="Index" asp-route-page="@i">@i</a>
                        </li>
                    }
                </ul>
            </nav>
        }