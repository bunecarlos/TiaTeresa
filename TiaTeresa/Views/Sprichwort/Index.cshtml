@model IEnumerable<TiaTeresa.Models.Sprichwort>

@{
    ViewData["Title"] = "Index";
}

@if (User.Identity.IsAuthenticated)
{
    <p>
        <a asp-action="Create" class="btn btn-primary">Neue Redewendung</a>
    </p>
}

<table class="table table-striped table-hover">
    <thead class="thead-light">
        <tr>
            <th>Sprichwort</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-action="Details" asp-route-id="@item.ID" class="text-decoration-none">
                        @Html.DisplayFor(modelItem => item.Spanisch)
                    </a>
                </td>
                <td>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-sm btn-outline-primary ms-1">Bearbeiten</a>
                        <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-sm btn-outline-danger ms-1">Löschen</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
